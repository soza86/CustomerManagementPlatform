@using CustomerManagementApp.Models;

<MudTable T="ViewCustomerModel" Items="_items" ServerData="GetCustomers" Bordered="true" RowsPerPage="5">
    <HeaderContent>
        <MudTh DataLabel="CompanyName">Company Name</MudTh>
        <MudTh DataLabel="ContactName">Contact Name</MudTh>
        <MudTh DataLabel="Address">Address</MudTh>
        <MudTh DataLabel="City">City</MudTh>
        <MudTh DataLabel="Region">Region</MudTh>
        <MudTh DataLabel="PostalCode">Postal Code</MudTh>
        <MudTh DataLabel="Country">Country</MudTh>
        <MudTh DataLabel="Phone">Phone</MudTh>
        <MudTh DataLabel="Actions">Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="CompanyName">@context.CompanyName</MudTd>
        <MudTd DataLabel="ContactName">@context.ContactName</MudTd>
        <MudTd DataLabel="Address">@context.Address</MudTd>
        <MudTd DataLabel="City">@context.City</MudTd>
        <MudTd DataLabel="Region">@context.Region</MudTd>
        <MudTd DataLabel="PostalCode">@context.PostalCode</MudTd>
        <MudTd DataLabel="Country">@context.Country</MudTd>
        <MudTd DataLabel="Phone">@context.Phone</MudTd>
        <MudTd>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="() => OpenForm(context)">Edit</MudButton>
            <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="() => DeleteRecord(context.Id)">Delete</MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager PageSizeOptions="new int[] { 10, 25, 50, 100, int.MaxValue }" />
    </PagerContent>
</MudTable>
